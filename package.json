{
  "name": "vsc-packages",
  "displayName": "Package Installer",
  "description": "A VSC extension to list packages from package.json and search for and install packages.",
  "version": "1.2.1",
  "license": "SEE LICENSE IN LICENSE.txt",
  "publisher": "sketchbuch",
  "main": "./out/extension.js",
  "icon": "logo.png",
  "activationEvents": [
    "*"
  ],
  "author": {
    "name": "sketchbuch"
  },
  "bugs": {
    "url": "https://github.com/sketchbuch/vsc-packages/issues"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vsc-packages-display-package",
        "icon": {
          "light": "./resources/images/light/activitybar-light.svg",
          "dark": "./resources/images/dark/activitybar-dark.svg"
        },
        "title": "Display Package"
      },
      {
        "command": "vsc-packages-open-npmurl",
        "icon": {
          "light": "./resources/images/light/activitybar-light.svg",
          "dark": "./resources/images/dark/activitybar-dark.svg"
        },
        "title": "Open the NPM Page for this Package"
      },
      {
        "command": "vsc-packages-select-folder",
        "title": "View packages in this folder"
      },
      {
        "command": "vsc-packages-search-packages",
        "title": "Packages: Search NPM"
      },
      {
        "command": "vsc-packages-search-results",
        "title": "Search Results"
      }
    ],
    "configuration": {
      "title": "Packages",
      "properties": {
        "packageManager": {
          "type": "string",
          "default": "yarn",
          "description": "Select the package manger that should be used to install packages",
          "enum": [
            "npm",
            "yarn"
          ]
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "vsc-packages-display-package",
          "when": "never"
        },
        {
          "command": "vsc-packages-open-npmurl",
          "when": "never"
        },
        {
          "command": "vsc-packages-search-results",
          "when": "never"
        },
        {
          "command": "vsc-packages-select-folder",
          "when": "never"
        }
      ],
      "view/item/context": [
        {
          "command": "vsc-packages-open-npmurl",
          "group": "inline",
          "icon": {
            "light": "./resources/images/light/activitybar-light.svg",
            "dark": "./resources/images/dark/activitybar-dark.svg"
          },
          "title": "Open the NPM Page for this Package",
          "when": "viewItem == package-list-item"
        }
      ]
    },
    "views": {
      "vsc-packages-activitybar": [
        {
          "id": "vsc-packages-activitybar-folders",
          "name": "Workspace Folders"
        },
        {
          "id": "vsc-packages-activitybar-packagejson",
          "name": "Packages",
          "when": "vsc-packages-folder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "./resources/images/light/activitybar-light.svg",
          "id": "vsc-packages-activitybar",
          "title": "Packages"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "keywords": [
    "dependencies",
    "installer",
    "npm",
    "package.json",
    "package"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sketchbuch/vsc-packages"
  },
  "scripts": {
    "audit-html": "yarn audit --json | yarn-audit-html --output audit-report.html",
    "compile": "tsc --project ./",
    "lint:prettier": "prettier --write --config ./.prettierrc.js './{src, resources/js}/**/*.{js,ts}'",
    "lint:css": "stylelint --config=.stylelintrc './resources/css/**/*.css'",
    "lint:ts": "yarn lint:ts:src && yarn lint:ts:test",
    "lint:ts:src": "tslint --config ./tslint.json --fix './src/**/*.ts' --exclude './src/test/**/*'",
    "lint:ts:test": "tslint --config ./src/test/tslint.json --fix './src/test/**/*.ts'",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test",
    "vscode:prepublish": "yarn run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@schemastore/package": "^0.0.5",
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.1.7",
    "@types/libnpmsearch": "^2.0.1",
    "@types/marked": "^0.7.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^10.12.21",
    "@types/sinon": "^7.0.13",
    "@types/stylelint": "^9.10.1",
    "@types/vfile-message": "^2.0.0",
    "axios-mock-adapter": "^1.17.0",
    "chai": "^4.2.0",
    "commitlint": "^8.3.5",
    "prettier": "^1.19.1",
    "sinon": "^7.3.2",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "yarn-audit-html": "^1.1.0"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "husky": "^4.2.3",
    "libnpmsearch": "^2.0.2",
    "lint-staged": "^9.5.0",
    "marked": "^0.8.0",
    "timeago.js": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "lint-staged",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src, resources/js}/**/*.{js,ts}": [
      "yarn lint:ts",
      "yarn lint:prettier",
      "git add"
    ],
    "resources/css/**/*.css": [
      "yarn lint:css",
      "yarn lint:prettier",
      "git add"
    ]
  }
}
